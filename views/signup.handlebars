<div class="container text-center">
        <div class="row">
            <form class="col-12 signup-form">
                <div class="input-group input-group-lg input-div">
                    <span class="input-group-text input-title" id="inputGroup-sizing-lg">Username</span>
                    <input type="text" id="username-signup" class="form-control input-field" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg">
                  </div>

                  <div class="input-group input-group-lg input-div">
                    <span class="input-group-text input-title" id="inputGroup-sizing-lg">Email</span>
                    <input type="text" id="email-signup" class="form-control input-field" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg">
                  </div>
                  
                  <div class="input-group input-group-lg input-div">
                    <span class="input-group-text input-title" id="inputGroup-sizing-lg">Password</span>
                    <input type="password" id="password-signup" class="form-control input-field">
                  </div>
                  
                  <button type="submit" class="btn btn-lg">Signup</button>
                </div>
              </form>
        </div>
    </div>

